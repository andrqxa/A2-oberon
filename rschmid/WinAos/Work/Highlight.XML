	<!--
        PROCEDURE EnsureAttribute(VAR attr : Texts.Attributes);
        BEGIN
        	IF (attr = NIL) THEN NEW(attr); NEW(attr.fontInfo);
        		attr.fontInfo.name := "Oberon";
        		attr.fontInfo.size := 12;
        		attr.fontInfo.style := {};
        		attr.color := 000000000H;
        		attr.bgcolor := 0000000FFH;
        	END
        END EnsureAttribute;
        *)
        PROCEDURE ChangeAttribute(VAR attr : Texts.Attributes; userData : ANY);
        BEGIN
        	IF (attr = NIL) THEN NEW(attr); NEW(attr.fontInfo); END;
        
        	attr.fontInfo.name := "Oberon";
        	attr.fontInfo.size := 12;
        	attr.fontInfo.style := {};
        	attr.color := SHORT(0FF0000FFH);
        	attr.bgcolor := 000000000H;
        	attr.fontInfo.fontcache := NIL;
        END ChangeAttribute;
        
        PROCEDURE ResetAttribute(VAR attr : Texts.Attributes; userData : ANY);
        BEGIN
        	IF (attr = NIL) THEN NEW(attr); NEW(attr.fontInfo); END;
        
        	attr.fontInfo.name := "Oberon";
        	attr.fontInfo.size := 10;
        	attr.fontInfo.style := {};
        	attr.color := 0000000FFH;
        	attr.bgcolor := 000000000H;
        	attr.fontInfo.fontcache := NIL;
        END ResetAttribute;
	-->
